include ../../../../core/templates/mixins/icon
include /templates/_mixins/all
.c-navbar
    .c-toolbar
        .c-toolbar__left
            .c-toolbar__item
                +c-brand({href: "/prototypes/account/super-user-homepage.html", size: "xsmall"})

        .c-toolbar__right
            .c-toolbar__item
                ul.c-pill-navigation
                    li.c-pill-navigation__item.c-pill-navigation__item--has-child-menu
                        button(type="button" data-menu="help")
                            +icon('circle-help', "o-svg-icon--small")
                            p.u-hidden--mobile Aide

                        ul.c-menu.c-menu--large(id="help")
                            li.c-menu__info
                                p.c-menu__subline Aide et documentation
                            li.c-menu__item
                                a.c-menu__label(href="#") 
                                    +icon('external-link')
                                    span Documentation
                            li.c-menu__item
                                a.c-menu__label(href="#") Questions-réponses
                            li.c-menu__item
                                a.c-menu__label(href="#") Contactez-nous
            
            .c-toolbar__item
                ul.c-pill-navigation
                    li.c-pill-navigation__item.c-pill-navigation__item--has-child-menu
                        button(type="button" data-menu="lang-switch") Français

                        ul.c-menu.c-menu--large(id="lang-switch")
                            li.c-menu__item.u-text-muted
                                p.c-menu__label Français
                            li.c-menu__item
                                a.c-menu__label(href="#") Dutch

            .c-toolbar__item
                button.c-user-navigation(href="#" data-menu="userMenu")
                    +c-avatar({img: '/images/avatars/1.jpg', alt: 'avatar'})
                    p.c-avatar-and-text__text.u-hidden--mobile Alice Henslay (HEA) 
                ul.c-menu.c-menu--xxlarge(id="userMenu")
                    li.c-menu__info
                        p.c-menu__subline Informations personnelles
                    li.c-menu__item.u-hidden--dsktp
                        p.c-menu__label.u-text-muted Alice Henslay (HEA) 
                    li.c-menu__item
                        a.c-menu__label(href="#") Vos informations personnelles
                    li.c-menu__item
                        a.c-menu__label(href="#") Vos documents
                    li.c-menu__item
                        a.c-menu__label(href="#") Votre compte
                    li.c-menu__item
                        a.c-menu__label(href="/examples/template-examples/terms-and-conditions--acceptation.html") Nos conditions d'utilisations
                    li.c-menu__divider(role="sign-out")
                    li.c-menu__item.c-menu__item--danger
                        a.c-menu__label(href="#")
                            +icon('log-out')
                            span Se déconnecter