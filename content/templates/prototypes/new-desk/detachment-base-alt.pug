extends /templates/prototypes/_layouts/default

block append pageVariables
    - var moduleTitle = "Detachments"
    - var view = "list"

block content

    .u-position-relative
        .c-navbar.c-navbar--bordered-bottom.c-navbar--scrollable
            .c-toolbar
                .c-toolbar__left
                    .c-toolbar__item
                        a.c-button.c-button--icon.c-button--borderless(href="/prototypes/index.html")
                            .c-button__content
                                +icon('arrow-left')
                                .u-sr-accessible Back
                    .c-toolbar__item
                            h2.c-toolbar__title Detachments in France
                .c-toolbar__right
                    .c-toolbar__item
                        +c-button({icon: 'filter'})(id="filterButton") Filter



    .u-scroll-wrapper-body
        .u-hidden.u-border-bottom(id="filters")
            .u-spacer-l
                .o-form-group-layout.o-form-group-layout--horizontal.o-form-group-layout--horizontal-short
                    .o-grid
                        .o-grid-col-bp2-3
                            +c-form-group({label: 'Reference', id: 'referenceId'})
                                +c-input({id: 'referenceId'})
                            +c-form-group({label: 'Employee', id: 'employeeId'})
                                +c-select({id: 'employeeId', value: ['Manfred', 'John', 'Jane'], width: 'medium'})
                        .o-grid-col-bp2-3
                            +c-form-group({label: 'Year', id: 'yearId'})
                                +c-select({id: 'yearId', value: contentData.years, width: 'medium'})
                            +c-form-group({label: 'Month', id: 'monthId'})
                                +c-select({id: 'monthId', value: contentData.months, width: 'medium'})
                        .o-grid-col-bp2-3
                            +c-form-group({label: 'Status DPD', id: 'statusDpdId'})
                                +c-select({id: 'statusDpdId', value: ['Pending', 'Validated'], width: 'medium'})
                            +c-form-group({label: 'Status A1', id: 'statusA1Id'})
                                +c-select({id: 'statusA1Id', value: ['Pending', 'Validated'], width: 'medium'})
                        .o-grid-col-bp2-3
                            +c-form-group({ label: 'Advisor', id: 'advisorId'})
                                +c-select({id: 'advisorId', value: ['ABC', 'DEF', 'GHI'], width: 'medium'})
        block contracts

        .c-navbar.c-navbar--scrollable.c-navbar--bordered-top
            .c-toolbar
                .c-toolbar__left
                    .c-toolbar__item
                        p.c-body-2.u-text-muted
                            | 1 - 10 of 18 items
                .c-toolbar__right
                    .c-toolbar__item
                        nav.c-pagination(aria-label='Page navigation')
                            ul.c-pagination__nav
                                li.c-pagination__item
                                    +c-button({ href: '#', layout: 'icon-only', icon: 'chevron-left', skin: 'borderless'})(disabled)
                                li.c-pagination__item.c-pagination__item--active
                                    a.c-pagination__link(href='#') 1
                                li.c-pagination__item
                                    a.c-pagination__link(href='#') 2
                                li.c-pagination__item
                                    +c-button({ href: '#', layout: 'icon-only', icon: 'chevron-right', skin: 'borderless'})

    script.
        const filters = document.querySelector('#filters');
        const filterButton = document.querySelector('#filterButton');

        filterButton.addEventListener('click', event => {
            filters.classList.toggle('u-hidden');
        });
