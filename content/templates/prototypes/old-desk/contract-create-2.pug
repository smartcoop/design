extends /templates/_layouts/master

block append pageVariables
    - var moduleTitle = "Dashboard"
    - var bodyClass = "u-maximize-height u-overflow-hidden"

block body
    .c-app-layout(class=fullScroll? "u-scroll" : "")
        main.u-maximize-width(class=!fullScroll? "u-scroll-wrapper" : "")
            .c-navbar
                .c-toolbar
                    .c-toolbar__left
                        .c-toolbar__item
                            a.c-button.c-button--icon.c-button--borderless(href="/prototypes/index.html")
                                .c-button__content
                                    +icon('arrow-left')
                                    .u-sr-accessible Back
                        .c-toolbar__item
                            h2.c-toolbar__title New contract
                    .c-toolbar__left
                        .c-toolbar__item
                            nav.c-wizard
                                ul
                                    li
                                        a.c-wizard__item.c-wizard--complete(href="contract-create-1.html")
                                            .c-wizard__indicator
                                            .c-wizard__label General info
                                    li
                                        a.c-wizard__item.c-wizard--active(href="#")
                                            .c-wizard__indicator 2
                                            .c-wizard__label Location and dates
                                    li
                                        a.c-wizard__item(href="contract-create-3.html")
                                            .c-wizard__indicator 3
                                            .c-wizard__label Function and risks
                                    li
                                        a.c-wizard__item(href="contract-create-4.html")
                                            .c-wizard__indicator 4
                                            .c-wizard__label Contract type
                                    li
                                        a.c-wizard__item(href="contract-create-5.html")
                                            .c-wizard__indicator 5
                                            .c-wizard__label Confirm
                    .c-toolbar__right
                        .c-toolbar__item
                            .c-button-toolbar
                                +c-button({icon: 'arrow-left'}) Back
                                +c-button({skin: 'primary', layout: 'text-icon', icon: 'arrow-right'}) Next

            .u-scroll-wrapper-body
                .o-container.o-container--large
                    .o-container-vertical
                        .o-container.o-container--medium
                            .u-spacer-bottom-l
                                +c-alert({title: 'Declaration of work dates', message: 'Legal obligation: declare your work dates before you start to work.'})

                            .o-form-group-layout.o-form-group-layout--horizontal
                                +c-form-group({label: 'Work country', id: 'domain', isFullWidth: true})
                                    +c-select( { id: 'domain', value: ['Select a country', 'Belgium', 'France', 'Germany'], width: 'medium'})
                                +c-form-group({label: 'Work date', id: 'registerFormfieldBirthdate', type: 'date'})
                                    +c-input({id: 'registerFormfieldBirthdate', type: 'date', placeholder: 'dd/mm/yyyy', width: "medium" })

                                hr.c-hr

                                .o-form-group
                                    .o-form-group__controls.o-form-group__controls--full-width
                                        .c-checkbox
                                            label
                                                input(type="checkbox")
                                                | By ticking this checkbox, you confirm the work has not started.
                                        .c-checkbox
                                            label
                                                input(type="checkbox")
                                                | By ticking this checkbox, COVID-19 stuff.

                                .o-form-group
                                    .u-spacer-left-auto
                                        +c-button({skin: 'primary', layout: 'text-icon', icon: 'arrow-right'})(disabled) Next
