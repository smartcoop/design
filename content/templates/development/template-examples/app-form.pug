extends /templates/_layouts/default

block append pageVariables
    - var moduleTitle = "Dashboard"

block content
    .c-navbar.c-navbar--bordered-bottom
        .c-toolbar
            .c-toolbar__left
                .c-toolbar__item
                    a.c-button.c-button--icon.c-button--borderless(href="#")
                        .c-button__content
                            +icon('arrow-left')
                            .u-sr-accessible Back
                .c-toolbar__item
                        h2.c-toolbar__title Toolbar title

            .c-toolbar__right
                .c-toolbar__item
                    .c-button-toolbar
                        +c-button({ skin: 'primary' }) Save

    div(class=!fullScroll? "u-scroll-wrapper-body" : "")
        .o-container.o-container--large
            .o-container-vertical
                .c-panel.u-spacer-bottom-l
                    .c-panel__header
                        h2.c-panel__title Form grouping
                    .c-panel__body
                        .o-form-group-layout.o-form-group-layout--standard
                            .o-form-group
                                label.o-form-group__label Add client
                                .c-blank-slate.c-blank-slate--bg-alt
                                    p.u-text-muted.c-body-1 Please add a client for this quote.
                                    .c-button-toolbar
                                        +c-button({icon: 'add'}) Add new client
                                        +c-button({icon: 'add'}) Add existing client

                            -
                                var radioOptions = [
                                    {
                                        id: 0,
                                        name: 'Lorem ipsum dolor sit amet.'
                                    },
                                    {
                                        id: 1,
                                        name: 'Lorem ipsum dolor sit amet.'
                                    },
                                ]

                            +c-form-group({label: 'Radio'})
                                +c-radio-group({name: 'radio1', value: radioOptions, valueKey: 'id', key: 'name', checked: 0})

                .c-panel.u-spacer-bottom-l
                    .c-panel__header
                        h2.c-panel__title Form grouping
                    .c-panel__body
                        .o-form-group-layout.o-form-group-layout--standard
                            +c-form-group({label: 'Input', id: 'input'})
                                +c-input({id: 'input'})
                            +c-form-group({label: 'Select', id: 'select', helperText: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed commodo accumsan risus.'})
                                +c-select({id: 'select', value: ['Choose an item','A','B', 'C']})
                            +c-form-group({label: 'Textarea', id: 'textarea', helperText: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed commodo accumsan risus.'})
                                +c-textarea({id: 'textarea'})

                .c-panel.u-spacer-bottom-l
                    .c-panel__header
                        h2.c-panel__title Form grouping
                    .c-panel__body
                        .o-form-group-layout.o-form-group-layout--standard
                            +c-form-group({label: 'Nr BCE', id: 'input'})
                                +c-input({id: 'input',  placeholder: '__/__/__'})
                            .o-form-group
                                label.o-form-group__label(for="saleAmount") Sale amount
                                .c-input-group
                                    input.c-input(type="number" id="saleAmount")
                                    .c-input-group__append â‚¬
                            .o-form-group
                                label.o-form-group__label(for="time") Time
                                .o-flex.o-flex--vertical-center.o-flex--spaced
                                    span
                                        p From
                                        +c-input({ id: 'time', type: 'time'})
                                    span
                                        p To
                                        +c-input({ id: 'time', type: 'time'})
                            +c-form-group({ id: 'date', type: 'date'})
                                +c-input({id: 'date', type: 'date', placeholder: 'dd/mm/yyyy'})
