.o-form-group-layout.o-form-group-layout--standard(style="height: 450px; width: 240px;")
    .o-form-group
        label.o-form-group__label(for="dateId") Date
        .o-form-group__controls
            .c-input-with-icon
                input.c-input(type="text" value="12/10/2021" data-menu="datepicker" id="dateId")
                +icon('calendar')
        .c-menu(id="datepicker")
            .c-navbar.c-navbar--auto.c-navbar--bordered-bottom
                .u-spacer-s
                    .c-toolbar.c-toolbar--auto
                        .c-toolbar__left
                            .c-toolbar__item
                                button.c-button.c-button--borderless.c-button--icon
                                    .c-button__content
                                        +icon('chevron-left')
                                        .u-sr-accessible Previous month
                        .c-toolbar__center.c-toolbar__center--interactive
                            .c-toolbar__center-inner
                                .c-toolbar__item
                                    h2.c-toolbar__title February
                                .c-toolbar__item
                                    button.c-button.c-button--link(data-menu="dropdownMonth")
                                        .c-button__content
                                            .c-button__label 2021
                                            +icon('caret-down')
                                    // This is currently bugged, this menu does not open
                                    .c-menu(id="dropdownMonth" style="height: 250px; overflow: scroll")
                                        each item in contentData.years
                                            a.c-menu__item(href="#")
                                                .c-menu__label #{item}

                        .c-toolbar__right
                            .c-toolbar__item
                                button.c-button.c-button--borderless.c-button--icon
                                    .c-button__content
                                        +icon('chevron-right')
                                        .u-sr-accessible Next month
